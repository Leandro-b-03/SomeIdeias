{
  "name": "garden",
  "version": "0.0.1",
  "description": "A styleguide based on Leroy Merlin needs",
  "main": "index.js",
  "scripts": {
    "test": "babel-tape-runner test/**/*.js | faucet",
    "coverage": "babel-node node_modules/.bin/isparta cover test/**/*.js",
    "docs:pages": "metalsmith",
    "docs:postcss": "postcss -c ./docs/css/config.json",
    "docs:postcss-watch": "postcss -w -c ./docs/css/config.json",
    "docs": "npm run docs:pages && npm run docs:postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leroy-merlin-br/garden.git"
  },
  "author": "Fernando Fleury",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leroy-merlin-br/garden/issues"
  },
  "homepage": "https://github.com/leroy-merlin-br/garden#readme",
  "devDependencies": {
    "karma": "^0.13.16",
    "metalsmith": "^2.1.0",
    "metalsmith-ignore": "^0.1.2",
    "metalsmith-jade": "^2.0.2",
    "metalsmith-layouts": "^1.4.2",
    "metalsmith-markdown": "^0.2.1",
    "postcss-cli": "^2.3.2",
    "postcss-color-function": "^2.0.0",
    "postcss-custom-media": "^5.0.0",
    "postcss-import": "^7.1.3",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^1.2.0",
  },
  "dependencies": {
    "jquery": "^2.1.4"
  }
}
